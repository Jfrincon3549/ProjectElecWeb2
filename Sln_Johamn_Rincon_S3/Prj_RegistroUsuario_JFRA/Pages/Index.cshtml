@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid">
  <h2 class="alert-light">Registro</h2>
  <form method="post" enctype="multipart/form-data">
      <div class="form-group">
          <label>Nombre de Usuario: </label>
          <input asp-for="registro.UserName"  class="form-control"/>
          <b><span asp-validation-for="registro.UserName" class="alert-danger"></span></b>
      </div>
      <div class="form-group">
          <label>Contraseña: </label>
          <input asp-for="registro.Password" class="form-control" type="password"/>
          <b><span asp-validation-for="registro.Password" class="alert-danger"></span></b>
      </div>
      <div class="form-group">
          <label>Confirmación de contraseña: </label>
          <input asp-for="registro.Password2" class="form-control" type="password"/>
          <b><span asp-validation-for="registro.Password2" class="alert-danger"></span></b>
      </div>
      <div class="form-group">
          <label>Genero: </label>
          <select asp-for="registro.Gender" asp-items="@Model.ObtenerListaGenero("Id","Descripcion")" class="form-control" ></select>
      </div>
      <div>
          <input type="file" asp-for="Upload" required />
      </div>
      <i><label>@Model.result</label></i>
      <div>
          <input type="submit" class="btn btn-primary" value="Aceptar"/>
      </div>
  </form>
</div>
